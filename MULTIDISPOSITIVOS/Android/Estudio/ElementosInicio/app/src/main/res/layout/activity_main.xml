<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="javi.androidlearn.elementosinicio.MainActivity">

    <TextView
        android:id="@+id/etiquetaLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List View"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listica"
        android:layout_width="368dp"
        android:layout_height="229dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="274dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/etiquetaLista" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="368dp"
        android:layout_height="38dp"
        android:layout_marginTop="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/etiquetaSpinner" />

    <TextView
        android:id="@+id/etiquetaSpinner"
        android:layout_width="54dp"
        android:layout_height="22dp"
        android:text="Spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/etiquetaGridView"
        android:layout_width="63dp"
        android:layout_height="20dp"
        android:text="GridView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="369dp"
        android:layout_height="143dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="96dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etiquetaGridView" />

</android.support.constraint.ConstraintLayout>
