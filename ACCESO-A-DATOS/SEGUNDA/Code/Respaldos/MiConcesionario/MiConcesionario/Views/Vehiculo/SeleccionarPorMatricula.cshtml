@model IEnumerable<MiConcesionario.Models.Vehiculo>

@{
    ViewBag.Title = "BuscarPorMatricula";
}

<h2>BuscarPorMatricula</h2>

<form method="get">
    <label>Inserta la matrícula a buscar: </label>
    @*
        Sería otra forma de hacerlo
        @foreach (String Matricula in ViewBag.Matriculas)
    {
        <p>@Matricula</p>
    }
    *@
    @Html.DropDownList("Matricula", "--- BUSCAR ---");
    <input type="submit" value="Busca!" />
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Serie.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Matricula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Serie.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Matricula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
